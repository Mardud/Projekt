<h1>Editing Week</h1>

<%= form_for :task, url: user_week_day_task_path(@task.day.week.user, @task.day.week, @task.day, @task), method: :patch do |f| %>
    <% if @task.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@task.errors.count, "error") %> prohibited
            this post from being saved:</h2>
          <ul>
            <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
